<body>
 <header>CozyHomeStays</header>
 <main>
  <div class="container">
    <h2>Set Property Pricing</h2>
    <% if (message) { %>
      <div class="alert alert-info"><%= message %></div>
    <% } %>
    <form method="POST" action="/host/property/<%= propertyId %>/pricing" id="pricingForm">
      <!-- Full Price -->
      <div class="form-section">
        <label class="form-label">Base Price (per night)</label>
        <input type="number" name="fullprice" id="fullprice" class="form-control" required value="<%= (data && typeof data.fullprice !== 'undefined' && data.fullprice !== null && data.fullprice !== '') ? data.fullprice : 1000 %>">
      </div>

      <!-- Check-in and Check-out Times -->
      <div class="form-section row">
        <div class="col-md-6 mb-2">
          <label class="form-label" for="checkInTime">Check-in Time</label>
          <input
            type="time"
            id="checkInTime"
            name="checkInTime"
            class="form-control"
            required
            value="<%= data && data.checkInTime ? (typeof data.checkInTime === 'string' ? data.checkInTime.substring(11,16) : (new Date(data.checkInTime)).toISOString().substring(11,16)) : '' %>"
          >
        </div>
        <div class="col-md-6 mb-2">
          <label class="form-label" for="checkOutTime">Check-out Time</label>
          <input
            type="time"
            id="checkOutTime"
            name="checkOutTime"
            class="form-control"
            required
            value="<%= data && data.checkOutTime ? (typeof data.checkOutTime === 'string' ? data.checkOutTime.substring(11,16) : (new Date(data.checkOutTime)).toISOString().substring(11,16)) : '' %>"
          >
        </div>
      </div>
      <!-- End Check-in and Check-out Times -->

      <!-- Day Wise Prices -->
      <div class="form-section">
        <label class="form-label">Day Wise Prices (Overrides Base Price)</label>
        <div class="row">
          <%
            const daysOfWeek = (typeof dayOrder !== 'undefined' && Array.isArray(dayOrder))
              ? dayOrder
              : ['Monday','Tuesday','Wednesday','Thursday','Friday','Saturday','Sunday'];
            const dayWise = (data && data.dayWisePrices) ? data.dayWisePrices : {};
            const basePrice = (data && typeof data.fullprice !== 'undefined' && data.fullprice !== null && data.fullprice !== '') ? data.fullprice : 1000;
          %>
          <% daysOfWeek.forEach(function(day) { %>
            <div class="col-md-3 mb-2">
              <label style="font-size:0.9em"><%= day.charAt(0).toUpperCase() + day.slice(1) %>:</label>
              <input
                type="number"
                class="form-control daywise-price-input"
                name="dayWisePrices[<%= day %>]"
                min="0"
                value="<%= (dayWise && dayWise[day]) ? dayWise[day] : basePrice %>"
                placeholder="e.g. 1200"
              >
            </div>
          <% }); %>
        </div>
      </div>
      <!-- Occasion Prices (Optional) -->
      <div class="form-section">
        <label class="form-label">Occasion Prices <span class="text-muted" style="font-weight: normal;">(optional)</span></label>
        <div id="occasionContainer">
          <% if (data && data.occationprice && data.occationprice.length) { %>
            <% data.occationprice.forEach(function(o, idx) { %>
              <div class="row mb-2 occasion-row" style="position:relative;">
                <div class="col-md-3">
                  <input type="text" name="occationprice[name][]" class="form-control" placeholder="Occasion Name" value="<%= o.name %>">
                </div>
                <div class="col-md-3">
                  <input type="date" name="occationprice[startDate][]" class="form-control"
                    value="<%= (o.startDate && o.startDate.toISOString ? o.startDate.toISOString().substring(0,10) : (typeof o.startDate === 'string' ? o.startDate.substring(0,10) : '')) %>">
                </div>
                <div class="col-md-3">
                  <input type="date" name="occationprice[endDate][]" class="form-control"
                    value="<%= (o.endDate && o.endDate.toISOString ? o.endDate.toISOString().substring(0,10) : (typeof o.endDate === 'string' ? o.endDate.substring(0,10) : '')) %>">
                </div>
                <div class="col-md-2">
                  <input type="number" name="occationprice[price][]" class="form-control occasion-price" placeholder="Price" value="<%= o.price %>">
                </div>
                <div class="col-md-1">
                  <% if(idx > 0) { %>
                    <button type="button" class="btn btn-danger remove-btn" onclick="this.closest('.occasion-row').remove();">X</button>
                  <% } %>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <div class="row mb-2 occasion-row" style="position:relative;">
              <div class="col-md-3">
                <input type="text" name="occationprice[name][]" class="form-control" placeholder="Occasion Name">
              </div>
              <div class="col-md-3">
                <input type="date" name="occationprice[startDate][]" class="form-control">
              </div>
              <div class="col-md-3">
                <input type="date" name="occationprice[endDate][]" class="form-control">
              </div>
              <div class="col-md-2">
                <input type="number" name="occationprice[price][]" class="form-control occasion-price" placeholder="Price">
              </div>
              <div class="col-md-1"></div>
            </div>
          <% } %>
        </div>
        <button type="button" class="btn btn-secondary" onclick="addOccasion()">+ Add Occasion</button>
        <div class="form-text text-muted mt-1">Leave blank if you don't want to add any occasion prices.</div>
      </div>
      <!-- Discount -->
      <div class="form-section">
        <label class="form-label">Discount for Early Bookings</label>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="discount_isActive" id="discount_isActive"
            <% if (data && data.discount && data.discount.isActive) { %> checked <% } %> >
          <label class="form-check-label" for="discount_isActive">
            Enable discount for first
            <input type="number" name="discount_bookingsLimit" style="width:60px;display:inline" min="1"
              value="<%= data && data.discount ? data.discount.bookingsLimit : 3 %>"> bookings:
          </label>
        </div>
        <div class="mt-2">
          <span>Discount Percentage:</span>
          <input type="number" name="discount_percentage" min="0" max="100" class="form-control d-inline-block" style="width:100px;display:inline"
            id="discount_percentage"
            value="<%= data && data.discount ? data.discount.percentage : 0 %>"> %
        </div>
      </div>
      <div class="progress-bar-container" role="progressbar" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100">
        <div class="progress-water-fill"></div>
      </div>
      <footer>
        <a href="/host/<%= propertyId %>/rules" class="btn-back">Back</a>
        <button type="submit" class="btn-next">Next</button>
      </footer>
    </form>

    <hr class="my-4">

    <h3>Pricing Calendar</h3>
    <form class="form-inline" method="get" action="">
      <div class="row mb-3">
        <div class="col-md-3">
          <select name="month" class="form-control">
            <% for(let m=1;m<=12;m++){ %>
              <option value="<%= m %>" <% if(m==month){ %>selected<% } %>><%= ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'][m-1] %></option>
            <% } %>
          </select>
        </div>
        <div class="col-md-2">
          <select name="year" class="form-control">
            <% for(let y=firstYear;y<=lastYear;y++){ %>
              <option value="<%= y %>" <% if(y==year){ %>selected<% } %>><%= y %></option>
            <% } %>
          </select>
        </div>
        <div class="col-md-2">
          <button type="submit" class="btn btn-info">Go</button>
        </div>
      </div>
    </form>
    <table class="table table-bordered table-sm">
      <thead class="table-light">
        <tr>
          <th>Date</th>
          <th>Price</th>
          <th>Platform Charge (<%= servicerate %>%)</th>
          <th>You Receive</th>
          <th>Occasion</th>
          <th>Here From</th>
          <% if(data && data.discount && data.discount.isActive && data.discount.percentage>0){ %>
            <th class="discount">Discounted Price</th>
            <th class="discount">Platform Charge</th>
            <th class="discount">You Receive</th>
          <% } %>
        </tr>
      </thead>
      <tbody>
        <% days.forEach(function(day){ %>
        <tr>
          <td><%= day.date %></td>
          <td>
            ₹<%= day.price %>
          </td>
          <td>
            ₹<%= day.platformFee ? day.platformFee.toFixed(2) : '0.00' %>
          </td>
          <td>
            ₹<%= day.hostGets ? day.hostGets.toFixed(2) : '0.00' %>
          </td>
          <td>
            <% if(day.occasion){ %>
              <span class="occasion"><%= day.occasion %></span>
            <% } else { %>
              -
            <% } %>
          </td>
          <td>
            <% if(day.occasion){ %>
              <span class="herefrom-badge here-occasion">Occasion: <%= day.occasion %></span>
            <% } else { %>
              <span class="herefrom-badge here-base">Base</span>
            <% } %>
            <% if(data && data.discount && data.discount.isActive && data.discount.percentage>0 && day.discountedPrice!==null){ %>
              <span class="herefrom-badge here-discount ms-2">Discounted</span>
            <% } %>
          </td>
          <% if(data && data.discount && data.discount.isActive && data.discount.percentage>0){ %>
            <td class="discount">
              <% if(day.discountedPrice!==null && day.discountedPrice!==undefined){ %>
                ₹<%= day.discountedPrice.toFixed(2) %>
              <% } else { %>
                -
              <% } %>
            </td>
            <td class="discount">
              <% if(day.discPlatformFee!==null && day.discPlatformFee!==undefined){ %>
                ₹<%= day.discPlatformFee.toFixed(2) %>
              <% } else { %>
                -
              <% } %>
            </td>
            <td class="discount">
              <% if(day.discHostGets!==null && day.discHostGets!==undefined){ %>
                ₹<%= day.discHostGets.toFixed(2) %>
              <% } else { %>
                -
              <% } %>
            </td>
          <% } %>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <script>
    function addOccasion() {
      const container = document.getElementById('occasionContainer');
      const idx = container.querySelectorAll('.occasion-row').length;
      const div = document.createElement('div');
      div.className = "row mb-2 occasion-row";
      div.style.position = "relative";
      div.innerHTML = `
        <div class="col-md-3">
          <input type="text" name="occationprice[name][]" class="form-control" placeholder="Occasion Name">
        </div>
        <div class="col-md-3">
          <input type="date" name="occationprice[startDate][]" class="form-control">
        </div>
        <div class="col-md-3">
          <input type="date" name="occationprice[endDate][]" class="form-control">
        </div>
        <div class="col-md-2">
          <input type="number" name="occationprice[price][]" class="form-control occasion-price" placeholder="Price">
        </div>
        <div class="col-md-1">
          <button type="button" class="btn btn-danger remove-btn" onclick="this.closest('.occasion-row').remove();">X</button>
        </div>
      `;
      container.appendChild(div);
    }
  </script>
</body>
</html>