<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>SEO Admin Login</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <style>
    body {
      min-height: 100vh;
      background: linear-gradient(120deg, #f8fafc 0%, #e9f3ff 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;
    }
    .login-card {
      background: #fff;
      border-radius: 18px;
      box-shadow: 0 4px 32px #174ea633;
      padding: 2.5rem 2.2rem 2rem 2.2rem;
      width: 100%;
      max-width: 400px;
      margin: auto;
    }
    .login-title {
      font-weight: 700;
      color: #174ea6;
      letter-spacing: 1px;
      margin-bottom: 0.6em;
      text-shadow: 0 1px 0 #fff;
    }
    .seo-logo {
      display: block;
      margin: 0 auto 1.5rem auto;
      width: 60px;
      height: 60px;
    }
    .login-footer {
      text-align: center;
      margin-top: 1.8rem;
      font-size: 0.96em;
      color: #6b7a89;
      opacity: 0.8;
    }
  </style>
</head>
<body>
  <!-- Bootstrap Toast for session message -->
  <% if (message) { %>
    <div class="position-fixed top-0 start-50 translate-middle-x p-3" style="z-index: 1080;">
      <div id="sessionToast" class="toast align-items-center text-white bg-info border-0 show" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="3000">
        <div class="d-flex">
          <div class="toast-body" style="font-size:1.08em;">
            <i class="bi bi-info-circle"></i> <%= message %>
          </div>
          <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
      </div>
    </div>
  <% } %>
  <div class="login-card">
    <img src="/images/seo-icon.png" alt="SEO Icon" class="seo-logo" onerror="this.style.display='none'">
    <h2 class="login-title text-center mb-3">SEO Admin Login</h2>
    <form action="/seo/login" method="POST" autocomplete="off">
      <div class="mb-3">
        <label for="username" class="form-label">Username or Email</label>
        <div class="input-group">
          <span class="input-group-text"><i class="bi bi-person-circle"></i></span>
          <input type="email" id="username" name="email" required class="form-control" placeholder="Enter your admin username/email">
        </div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <div class="input-group">
          <span class="input-group-text"><i class="bi bi-shield-lock"></i></span>
          <input type="password" id="password" name="password" required class="form-control" placeholder="Enter your password">
        </div>
      </div>
      <div class="mb-2 d-flex justify-content-between align-items-center">
        <div class="form-check">
          <input type="checkbox" class="form-check-input" name="remember" id="remember">
          <label for="remember" class="form-check-label">Remember me</label>
        </div>
        <a href="/seos/forgot" style="font-size:0.97em; color:#174ea6;">Forgot password?</a>
      </div>
      <button type="submit" class="btn btn-primary w-100 py-2 mt-2">Login</button>
    </form>
    <div class="login-footer">
      &copy; <%= new Date().getFullYear() %> CozyHomeStays Admin &bull; SEO Panel
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <% if (message) { %>
    <script>
      // Show the toast when the page loads
      const toastEl = document.getElementById('sessionToast');
      if (toastEl) {
        const toast = new bootstrap.Toast(toastEl);
        toast.show();
      }
    </script>
  <% } %>
</body>
</html>